<section class="login-block">
  <div class="container">
    <div class="row">
      <div class="col-md-4 login-sec">
        <div class="text-center">
          <h1> WELOCOME BACK</h1> <br>
          <h2 class="text-center">Login Now</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email , :class=> "text-uppercase"%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"form-control ", :class=>"col-md-6"%>
          </div>
          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password" , :class=>"form-control", :class=>"col-md-6" %>
          </div>
          <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", :class=>"btn btn-lg btn-primary btn-block",class: "btn btn-primary"%>
          </div>
          <% end %>
          <%= link_to 'Back', root_path %><br>
          <%= render "devise/shared/links" %>

          <p class="mt-2 mb-3 text-muted">Â© 2017-2019</p>


        </div>

      </div>
