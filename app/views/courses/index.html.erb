<div class="text-center">
  <p id="notice"><%= notice %></p>
  <h1>Courses</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Code</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.code %></td>
        <td><%= link_to 'Show', course , class: "btn btn-primary"%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<%= link_to 'Back', appointments_path , class: "btn btn-primary" %>
  <br>
  <% if current_user.is_tutor%>
  <%= link_to 'New Course', new_course_path %>
  <%end%>
</div>

